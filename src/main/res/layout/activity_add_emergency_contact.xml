<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#1c2841"
    tools:context=".AddEmergencyContact">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <com.hbb20.CountryCodePicker
            android:id="@+id/countrypicker1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginRight="3dp"
            android:layout_weight="3"
            android:background="@drawable/edittextbg"
            app:ccp_defaultNameCode="pk"
            app:ccp_showArrow="false"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputphone1"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/edittextbg"
            android:hint="Enter Contact"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <com.hbb20.CountryCodePicker
            android:id="@+id/countrypicker2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginRight="3dp"
            android:layout_weight="3"
            android:background="@drawable/edittextbg"
            app:ccp_defaultNameCode="pk"
            app:ccp_showArrow="false"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputphone2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/edittextbg"
            android:hint="Enter Contact"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <com.hbb20.CountryCodePicker
            android:id="@+id/countrypicker3"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginRight="3dp"
            android:layout_weight="3"
            android:background="@drawable/edittextbg"
            app:ccp_defaultNameCode="pk"
            app:ccp_showArrow="false"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputphone3"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/edittextbg"
            android:hint="Enter Contact"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <com.hbb20.CountryCodePicker
            android:id="@+id/countrypicker4"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginRight="3dp"
            android:layout_weight="3"
            android:background="@drawable/edittextbg"
            app:ccp_defaultNameCode="pk"
            app:ccp_showArrow="false"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputphone4"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/edittextbg"
            android:hint="Enter Contact"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <com.hbb20.CountryCodePicker
            android:id="@+id/countrypicker5"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginRight="3dp"
            android:layout_weight="3"
            android:background="@drawable/edittextbg"
            app:ccp_defaultNameCode="pk"
            app:ccp_showArrow="false"
            app:ccp_showFlag="false"
            app:ccp_showNameCode="false" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/inputphone5"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:background="@drawable/edittextbg"
            android:hint="Enter Contact"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="select contact that you want to make primary contact"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <RadioGroup
            android:id="@+id/radioGroupPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radiobtn1"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="1"/>
            <RadioButton
                android:id="@+id/radiobtn2"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="2"/>
            <RadioButton
                android:id="@+id/radiobtn3"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="3"/>
            <RadioButton
                android:id="@+id/radiobtn4"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="4"/>
            <RadioButton
                android:id="@+id/radiobtn5"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="5"/>
        </RadioGroup>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/savebtn"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/custombtn1"
        android:text="Save"
        android:textColor="#ffff"
        android:textAllCaps="false"
        android:layout_marginHorizontal="25dp"/>
</androidx.appcompat.widget.LinearLayoutCompat>